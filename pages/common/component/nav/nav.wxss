.index-bd {
  padding: 0 30rpx 40rpx;
}
.kind-list-item {
  margin: 15rpx 0;
  background-color: #ffffff;
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text {
  flex: 1;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-item-hd {
  padding: 15rpx;
  display: flex;
  align-items: center;

  transition: opacity 0.3s;
}
.kind-list-item-hd-show {
  opacity: 0.2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
  padding-left: 40rpx;
}
