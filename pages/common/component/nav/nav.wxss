@import '../../../../app.wxss';
.nav {
  width: 100%;
  height: 80rpx;
  background-color: turquoise;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 80rpx;
  color: white;
}
.side {
  width: 60%;
  height: 100vh;
  background-color: tomato;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}
.side .sideHead {
  width: 100%;
  height: 250rpx;
  background-color: teal;
  color: white;
}
.side .sideHead .logo {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.side .sideHead .logo image {
  width: 100rpx;
  height: 80rpx;
  padding: 20rpx;
}
.side .sideHead .logo text {
  padding: 20rpx;
}
.side .sideHead .deviceNum {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
}
.side .sideHead .deviceNum .itemNum {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
